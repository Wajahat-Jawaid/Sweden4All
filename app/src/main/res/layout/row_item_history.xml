<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/bg_color"
    android:paddingBottom="12dp"
    android:paddingTop="12dp">

    <com.sweden4all.components.MTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:paddingStart="12dp"
        android:text="Tue, Feb 28"
        android:textColor="@color/ripple" />

    <com.sweden4all.components.MTextView
        android:id="@+id/tv_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:paddingStart="12dp"
        android:text="2 PM"
        android:textColor="@color/ripple"
        android:textSize="20sp" />

    <com.sweden4all.components.MTextView
        android:id="@+id/tv_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_date"
        android:maxLines="1"
        android:text="Applying for the visit visa"
        android:textAllCaps="true"
        android:textColor="@color/black_text"
        app:fontName="Roboto_Medium" />

    <com.sweden4all.components.MTextView
        android:id="@+id/tv_timings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_reason"
        android:layout_centerVertical="true"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/tv_date"
        android:text="2 PM - 3 PM" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/ripple" />

</RelativeLayout>