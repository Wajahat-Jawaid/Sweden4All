<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/banner_home">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <com.sweden4all.components.MTextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/solid_purple_564383_corner_b5"
                android:padding="4dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/green_39b04f"
                android:textSize="12sp"
                app:fontName="Roboto_Bold" />

            <com.sweden4all.components.MTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="4dp"
                android:text="@string/app_name"
                android:textColor="@color/white_text"
                app:fontName="Roboto_Bold" />

            <com.sweden4all.components.MTextView
                android:id="@+id/tv_timings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="4dp"
                android:text="@string/app_name"
                android:textColor="@color/white_text"
                app:fontName="Roboto_Bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:background="@color/white_text" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_profile" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <com.sweden4all.components.MTextView
            android:id="@+id/tv_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAMILY VISA"
            android:textAllCaps="true"
            android:textColor="@color/gray_text"
            android:textSize="16sp"
            app:fontName="Roboto_Medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/gray_eaeaea" />

        <com.sweden4all.components.MTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/cat_title"
            android:textAllCaps="true"
            android:textColor="@color/gray_hint"
            android:textSize="12sp"
            app:fontName="Roboto_Regular" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sweden4all.components.MTextView
                android:id="@+id/tv_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/rv_info"
                android:ellipsize="end"
                android:maxLength="50"
                android:text="I got refused last year, got some difficulty"
                android:textColor="@color/gray_text"
                android:textSize="16sp"
                app:fontName="Roboto_Medium" />

            <com.sweden4all.utils.RippleView
                android:id="@+id/rv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <android.support.v7.widget.AppCompatImageButton
                    style="@style/Style_IB"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_info_outline_gray_555555_24dp" />
            </com.sweden4all.utils.RippleView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:background="@color/gray_eaeaea" />

        <com.sweden4all.components.MTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agenda_to_meet"
            android:textAllCaps="true"
            android:textColor="@color/gray_hint"
            android:textSize="12sp"
            app:fontName="Roboto_Regular" />

        <com.sweden4all.utils.RippleView
            android:id="@+id/rv_del"
            style="@style/Wrap_Width_RippleView"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/solid_brown_b18742_corner_20">

            <com.sweden4all.components.MTextView
                style="@style/RippleView_Text"
                android:text="@android:string/delete"
                app:fontName="Roboto_Bold" />
        </com.sweden4all.utils.RippleView>
    </LinearLayout>
</LinearLayout>