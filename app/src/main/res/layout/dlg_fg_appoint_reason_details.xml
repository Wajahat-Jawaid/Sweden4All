<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sweden4all.components.MTextView
        android:id="@+id/tv_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/appoint_done_msg"
        app:fontName="Roboto_Regular" />

    <com.sweden4all.utils.RippleView
        android:id="@+id/rv_ok"
        style="@style/Match_Width_RippleView"
        android:layout_alignParentBottom="true"
        android:background="@color/purple_564383">

        <com.sweden4all.components.MTextView
            style="@style/RippleView_Text"
            android:text="@android:string/ok" />
    </com.sweden4all.utils.RippleView>

</RelativeLayout>